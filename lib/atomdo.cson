'fileTypes': [
  'todo'
  'taskpaper'
  'idea'
  'blog'
]
'scopeName': 'source.todo'

'name': 'AtomDo'
'patterns': [

  {
    'match': '^([^☐✔✘\\s].*):$'
    'name': 'control.atomdo.header.${1:/downcase}'
    'captures':
        '1':
            'name': 'control.atomdo.header-title'
            'patterns': [
                {'include': '#boldtask'}
            ]
  }

  {
    'begin': '^([\\s]*)(?=.*@done)'
    'end': '$'
    'name': 'atomdo.text.done'
    'patterns': [
          {'include': '#boldtask'}
          {'include': '#enhancements'}
    ]
  }

  {
    'begin': '^([\\s]*)(?=.*@cancelled)'
    'end': '$'
    'name': 'atomdo.text.cancelled'
    'patterns': [
          {'include': '#boldtask'}
          {'include': '#enhancements'}
    ]
  }


  {
    'match': '^([\\s]*)([☐✔✘].*)$'
    'name': 'atomdo.text'
    'captures':
      '2':
        'patterns': [
          {'include': '#boldtask'}
          {'include': '#enhancements'}
        ]
  }

  {
    'match': '^([\\s]+)([^☐✔✘\\s].*)$'
    'name': 'atomdo.subtle'
    'captures':
      '2':
        'patterns': [
          {'include': '#boldtask'}
          {'include': '#enhancements'}
        ]
  }

  {
    'match': '^(.*)$'
    'name': 'atomdo.text'
    'captures':
      '1':
        'patterns': [
          {'include': '#enhancements'}
        ]
  }
]

'repository':
  'boldtask':
    'match': '(.*:(\\s*@([\\w?!_\\-]+)(?:\\((.*?)\\))?)*)$'
    'name':  'atomdo.boldtask'
    'captures':
        '1':
            'patterns': [
              {'include': '#marker'}
              {'include': '#attribute'}
              {'include': '#tag'}
              {'include': '#prio'}
              {'include': '#url'}
            ]
  'enhancements':
    'match': '(.*)'
    'captures':
        '1':
            'patterns': [
              {'include': '#marker'}
              {'include': '#attribute'}
              {'include': '#tag'}
              {'include': '#prio'}
              {'include': '#url'}
            ]
  'marker':
    'match': '(☐|✔|✘)'
    'name': 'keyword.atomdo.marker'
  'url':
    'match': 'http(s?)://\\S*[^ ,!?;)\\]]'
    'name': 'keyword.atomdo.url'
  'attribute':
    'match': '@([\\w?!_\\-]+)(?:\\((.*?)\\))?'
    'name': 'atomdo.attribute.$1'
    'captures':
      '1': 'name': 'atomdo.attribute-name'
      '2': 'name': 'atomdo.attribute-value'
  'tag':
    'match': '#([\\w?!_\\-]+)(?:\\((.*?)\\))?'
    'name': 'atomdo.tag.$1'
    'captures':
      '1': 'name': 'atomdo.tag-name'
      '2': 'name': 'atomdo.tag-value'
  'prio':
    'match': '\\!([\\w?!_\\-]+)(?:\\((.*?)\\))?'
    'name': 'atomdo.prio.$1'
    'captures':
      '1': 'name': 'atomdo.prio-name'
      '2': 'name': 'atomdo.prio-value'
